---
import { Icon } from 'astro-icon/components';
import Button from '../components/Button.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SEO } from "astro-seo";
import '@fontsource-variable/cinzel';
import '@fontsource/im-fell-english';
import '@fontsource-variable/noto-serif-jp';
import '../scss/site.scss';
import { BASE_URL, ROUTES, IS_DEV } from '../config/site';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<script is:inline src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: BASE_URL + "logo.png",
        }
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: BASE_URL + "logo.png",
          },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
        ],
      }}
    />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		{IS_DEV ? (
			<div class="admin-link">
				<Button href={BASE_URL + ROUTES.admin} size="sm"><Icon name="edit" size="18px" /> Admin</Button>
			</div>
		) : (
			<div id="admin-link" class="admin-link d-none">
				<Button href={BASE_URL + ROUTES.admin} size="sm"><Icon name="edit" size="18px" /> Admin</Button>
			</div>
		)}
	</body>
</html>

<script is:inline>
	function updateUI() {
    const user = window.netlifyIdentity?.currentUser();
    const adminLink = document.getElementById('admin-link');
		
		console.log('updateUI called, user:', user, 'adminLink:', adminLink);
		
		if (adminLink) {
			if (user) {
				console.log('User logged in, showing admin button');
				adminLink.classList.remove('d-none');
			} else {
				console.log('No user, hiding admin button');
				adminLink.classList.add('d-none');
			}
		}
  }
  
  // Wait for netlifyIdentity to be ready
  function initNetlifyIdentity() {
    console.log('Checking for netlifyIdentity...', window.netlifyIdentity);
    if (window.netlifyIdentity) {
      console.log('netlifyIdentity found, setting up listeners');
      window.netlifyIdentity.on('init', (user) => {
        console.log('netlifyIdentity init event, user:', user);
        updateUI();
      });
      window.netlifyIdentity.on('login', (user) => {
        console.log('netlifyIdentity login event, user:', user);
        updateUI();
      });
      window.netlifyIdentity.on('logout', () => {
        console.log('netlifyIdentity logout event');
        updateUI();
      });
      
      // Check immediately in case init already fired
      console.log('Checking current user state immediately...');
      updateUI();
    } else {
      // Retry if not loaded yet
      console.log('netlifyIdentity not ready, retrying...');
      setTimeout(initNetlifyIdentity, 100);
    }
  }
  
  // Start when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNetlifyIdentity);
  } else {
    initNetlifyIdentity();
  }
</script>

<style>
	@layer base {
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}
		main {
			container: main / inline-size;
			margin-block-start: var(--header-height);
		}
		.admin-link {
			position: fixed;
			inset: auto 0 0 auto;
			z-index: 1000;
		}
	}
</style>
