---
import { Image } from "astro:assets";
import Info from './Info.astro';
import logo from "../assets/logo.png";
import SocialLink from './SocialLink.astro';
---

<footer>
  <Info />
  <div class="footer">
    <div>
      <div class="footer-logo">
        <Image src={logo} alt="Dojo seal" width={50} height={50} />
        <div>
          Dean's Okinawan <br aria-hidden="true" /> Martial Arts
        </div>
      </div>
      <div class="footer-copy">
        © {new Date().getFullYear()} · Hollywood, Maryland · Shorin-Ryu Matsumura Seito
      </div>
      <div class="footer-social">
        <SocialLink name="Facebook" url="https://www.facebook.com/DeansOkinawanMartialArts" icon="facebook" />
      </div>
    </div>
  </div>
</footer>

<style>
  @layer components {
    footer {
      container: footer / inline-size;
    }
    .footer > div {
      display: grid;
      justify-content: space-between;
      align-items: center;
      justify-items: center;
      gap: 1.5rem;
      padding: 2rem 1rem;
      @container (width >= 600px) {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      }
      @container (width >= 1200px) {
        grid-template-columns: 0.5fr 1fr 0.5fr;
        padding: 2rem 3rem;
      }
    }
    .footer {
      background: var(--stone);
      border-top: 1px solid rgba(255, 255, 255, 0.04);
    }
    .footer-logo {
			position: relative;
			display: flex;
			gap: 1rem;
			align-items: center;
      font-family: var(--ff-heading);
			font-size: 0.85rem;
			letter-spacing: 0.2em;
			color: var(--silver);
			text-transform: uppercase;
			line-height: 1.3;
		}
    .footer-copy {
      font-family: var(--ff-heading);
      font-size: 0.9rem;
      letter-spacing: 0.12em;
      color: var(--silver);
      /* @container (width >= 1200px) { */
        text-align: center;
      /* } */
    }
    .footer-social {
      text-align: center;
      display: grid;
      @container (width >= 1200px)  {
        justify-items: end;
      }
    }
  }
</style>
