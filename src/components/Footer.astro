---
import SocialLink from './SocialLink.astro';
import { BASE_URL } from "../config/site";
---

<footer>
  <div class="footer-logo">
    <img src={BASE_URL + 'logo.png'} alt="Dojo seal" class="dojo-seal is-sm" />
    <div>
      Dean's Okinawan <br aria-hidden="true" /> Martial Arts
    </div>
  </div>
  <div class="footer-copy">
    © {new Date().getFullYear()} · Hollywood, Maryland · Shorin-Ryu Matsumura Seito
  </div>
  <SocialLink name="Facebook" url="https://www.facebook.com/DeansOkinawanMartialArts" icon="facebook" />
</footer>

<style>
  @layer components {
    footer {
      background: var(--stone);
      border-top: 1px solid rgba(255, 255, 255, 0.04);
      padding: 2rem 3rem;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 1.5rem;
      @container (width < 600px) {
        place-content: center;
      }
    }
    .footer-logo {
			position: relative;
			display: flex;
			gap: 1rem;
			align-items: center;
      font-family: var(--ff-heading);
			font-size: 0.85rem;
			letter-spacing: 0.2em;
			color: var(--silver);
			text-transform: uppercase;
			line-height: 1.3;
		}
    .footer-copy {
      font-family: var(--ff-heading);
      font-size: 0.9rem;
      letter-spacing: 0.12em;
      color: var(--silver);
      text-align: center;
    }
    .footer-social {
      text-align: center;
      display: grid;
      justify-items: center;
    }
  }
</style>
