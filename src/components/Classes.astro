---
import Cards from "./cards/Cards.astro";
import Card from "./cards/Card.astro";

---

<section class="classes" id="classes">
  <div class="classes-inner">
    <div class="fade-in visible">
      <div class="section-label">Training</div>
      <h2 class="section-title">Classes &amp; Schedule</h2>
    </div>
    <Cards>
      <Card kanji="子">
        <div class="class-entry">
          <div class="class-age">Ages 4 – 15</div>
          <h3 class="class-name">Youth Karate</h3>
          <p class="class-desc">
            Foundational karate, kata, and kobudo instruction. Children develop
            discipline, confidence, and respect alongside physical skill.
          </p>
          <div class="class-schedule">Mon &amp; Wed · 6:00 – 7:00 PM</div>
        </div>
      </Card>
      <Card kanji="武">
        <div class="class-entry">
          <div class="class-age">Ages 16 &amp; Up</div>
          <h3 class="class-name">Adult Karate</h3>
          <p class="class-desc">
            Comprehensive Shorin-Ryu training including empty-hand kata, bunkai,
            and traditional Okinawan self-defense applications.
          </p>
          <div class="class-schedule">Tue &amp; Thu · 6:00 – 8:00 PM</div>
        </div>
      </Card>
      <Card kanji="道">
        <div class="class-entry">
          <div class="class-age">Certified Instruction</div>
          <h3 class="class-name">CPR Training</h3>
          <p class="class-desc">
            American Heart Association certified CPR and First Aid training. Open
            to dojo members and the wider community.
          </p>
          <div class="class-schedule">Contact for scheduling</div>
        </div>
      </Card>
    </Cards>
  </div>
</section>

<style>
  @layer components {
    .classes {
      --padding-x: 1rem;
      padding: 2rem var(--padding-x);
      background: var(--stone);
      @container (width >= 900px) {
        --padding-x: 3rem;
        padding: 7rem var(--padding-x);
      }
    }
    .classes-inner {
      container: classes / inline-size;
      max-width: 1200px;
      margin: 0 auto;
    }
    .class-entry {
      padding: var(--padding-x) 2.5rem;
      @container (width < 600px) {
        padding: 2rem 1.5rem;
      }
    }
    .section-label {
      font-family: var(--ff-heading);
      font-size: 0.62rem;
      letter-spacing: 0.5em;
      text-transform: uppercase;
      color: var(--silver);
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .section-title {
      font-family: var(--ff-heading);
      font-size: clamp(1.8rem, 3.5vw, 3rem);
      font-weight: 700;
      line-height: 1.1;
      color: var(--paper);
      margin-bottom: 2rem;
    }
    .class-age {
      font-family: var(--ff-heading);
      font-size: 0.9rem;
      letter-spacing: 0.4em;
      text-transform: uppercase;
      color: var(--silver);
      margin-bottom: 1rem;
    }
    .class-name {
      font-family: var(--ff-heading);
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--paper);
      margin-bottom: 0.75rem;
      line-height: 1.2;
    }
    .class-desc {
      font-size: 0.9rem;
      line-height: 1.7;
      color: var(--cream);
      margin-bottom: 1.5rem;
    }
    .class-schedule {
      font-family: var(--ff-heading);
      font-size: 0.9rem;
      letter-spacing: 0.2em;
      color: var(--glow-red);
      text-transform: uppercase;
    }
  }
</style>
