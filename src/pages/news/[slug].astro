---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Article from '../../components/articles/Article.astro';
import { SITE_SEO } from '../../config/site';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<Layout 
  title={`${post.data.title} | ${SITE_SEO.name.long}`} 
  description={post.data.description ? post.data.description : SITE_SEO.description}
>
  <Article {post} />
</Layout>
